{
	"name": "webrtc-fighter",
	"version": "1.0.0",
	"description": "",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "bun run build:all",
		"build:all": "bun run build:wasm && bun run build:js",
		"build:js": "tsc --noEmit && vite build",
		"build:wasm": "cd wasm-rhai && ./build.sh",
		"lint": "bun run lint:ts && bun run lint:rust",
		"lint:ts": "biome check .",
		"lint:rust": "cd wasm-rhai && cargo clippy",
		"format": "bun run format:ts && bun run format:rust",
		"format:ts": "biome format --write .",
		"format:rust": "cd wasm-rhai && cargo fmt",
		"fix": "bun run fix:ts && bun run fix:rust",
		"fix:ts": "biome check . --write --unsafe",
		"fix:rust": "cd wasm-rhai && cargo fix --allow-dirty --allow-staged"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@babylonjs/core": "^8.33.2",
		"@babylonjs/loaders": "^8.33.2",
		"canvas": "^3.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@eslint/js": "^9.38.0",
		"eslint": "^9.38.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12"
	}
}
